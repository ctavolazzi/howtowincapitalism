{
  "name": "howtowincapitalism",
  "version": "1.0.0",
  "type": "module",
  "description": "A satirical but practical wiki about financial autonomy",
  "scripts": {
    "dev": "astro dev",
    "dev:wrangler": "npm run build && wrangler pages dev dist --kv=USERS --kv=SESSIONS",
    "build": "astro build",
    "preview": "astro preview",
    "check": "astro build && echo '‚úì Build passed'",
    "deploy": "wrangler pages deploy dist",
    "ship": "node scripts/ship.mjs",
    "seed:users": "node scripts/seed-users.mjs",
    "seed:users:preview": "node scripts/seed-users.mjs --preview",
    "og-image": "node scripts/generate-og-image.mjs",
    "icons": "node scripts/generate-icons.mjs",
    "new": "node scripts/new-page.mjs",
    "test": "playwright test",
    "test:unit": "vitest run",
    "test:watch": "vitest",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report",
    "lint:css": "stylelint 'src/**/*.{css,astro}' --allow-empty-input",
    "lint:css:fix": "stylelint 'src/**/*.{css,astro}' --fix --allow-empty-input",
    "a11y:colors": "echo 'üé® Color Accessibility Check' && grep -rn '#[0-9a-fA-F]\\{3,6\\}' src/components --include='*.astro' --include='*.css' | grep -v 'var(--' | grep 'color' && echo '‚ùå Found hardcoded colors!' || echo '‚úÖ No hardcoded colors found'",
    "terminal:ambient": "node scripts/terminal-ambient-animation.mjs"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/mdx": "^4.3.12",
    "@astrojs/sitemap": "^3.6.0",
    "@nanostores/persistent": "^1.2.0",
    "astro": "^5.6.1",
    "nanostores": "^1.1.0",
    "resend": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.0",
    "@vitest/coverage-v8": "^4.0.15",
    "@vitest/ui": "^4.0.15",
    "sharp": "^0.34.5",
    "stylelint": "^16.26.1",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-declaration-strict-value": "^1.10.11",
    "vitest": "^4.0.15",
    "wrangler": "^4.53.0"
  }
}
