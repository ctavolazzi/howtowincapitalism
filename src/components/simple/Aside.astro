---
/**
 * @fileoverview Aside component for callout boxes.
 *
 * Simple color-coded callout box for notes, tips, cautions, and danger alerts.
 *
 * ## Type Variants
 * - `note`: Blue - general information
 * - `tip`: Green - helpful tips
 * - `caution`: Yellow - warnings
 * - `danger`: Red - critical warnings
 *
 * @module components/simple/Aside
 *
 * @example
 * ```astro
 * <Aside type="tip" title="Pro Tip">
 *   <p>Helpful content here</p>
 * </Aside>
 * ```
 *
 * @author How To Win Capitalism Team
 * @since 1.0.0
 */
export interface Props {
  type?: 'note' | 'tip' | 'caution' | 'danger';
  title?: string;
}

const { type = 'note', title } = Astro.props;

const colors = {
  note: { bg: '#eaf3ff', border: '#36c', icon: '‚ÑπÔ∏è' },
  tip: { bg: '#e6f6e6', border: '#2a2', icon: 'üí°' },
  caution: { bg: '#fef6e7', border: '#fc3', icon: '‚ö†Ô∏è' },
  danger: { bg: '#ffebec', border: '#c00', icon: 'üö®' },
};

const style = colors[type];
---

<aside class="aside" style={`background: ${style.bg}; border-color: ${style.border};`}>
  {title && <p class="aside-title">{style.icon} {title}</p>}
  <slot />
</aside>

<style>
  .aside {
    padding: 1rem;
    margin: 1rem 0;
    border-left: 4px solid;
    border-radius: 0 4px 4px 0;
  }

  .aside-title {
    font-weight: 600;
    margin: 0 0 0.5rem 0;
  }

  .aside :global(p:last-child) {
    margin-bottom: 0;
  }
</style>
