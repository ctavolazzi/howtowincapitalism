---
/**
 * ForgotPasswordForm Component
 *
 * Form to request a password reset email.
 */
---

<div class="forgot-password-container">
  <form id="forgot-password-form" class="forgot-password-form">
    <div class="form-group">
      <label for="email">Email Address</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="you@example.com"
        autocomplete="email"
      />
      <small class="hint">Enter the email address associated with your account</small>
    </div>

    <div id="error-message" class="error-message" style="display: none;">
      An error occurred. Please try again.
    </div>

    <div id="success-message" class="success-message" style="display: none;">
      <strong>✓ Check your email</strong><br>
      If an account exists with that email, you'll receive a password reset link shortly.
    </div>

    <button type="submit" class="submit-button" id="submit-button">
      Send Reset Link
    </button>
  </form>

  <p class="back-link">
    <a href="/login/">← Back to Login</a>
  </p>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('forgot-password-form') as HTMLFormElement;
    const errorMessage = document.getElementById('error-message') as HTMLDivElement;
    const successMessage = document.getElementById('success-message') as HTMLDivElement;
    const submitButton = document.getElementById('submit-button') as HTMLButtonElement;

    if (!form || !errorMessage || !successMessage || !submitButton) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const email = formData.get('email') as string;

      if (!email) {
        errorMessage.textContent = 'Please enter your email address.';
        errorMessage.style.display = 'block';
        return;
      }

      // Show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Sending...';
      errorMessage.style.display = 'none';
      successMessage.style.display = 'none';

      try {
        const response = await fetch('/api/auth/forgot-password/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email }),
        });

        const data = await response.json();

        if (response.ok && data.success) {
          // Success - show success message
          successMessage.style.display = 'block';
          form.reset();
          submitButton.style.display = 'none';
        } else {
          // Failed - show error
          errorMessage.textContent = data.error || 'Failed to send reset email. Please try again.';
          errorMessage.style.display = 'block';
          form.classList.add('shake');
          setTimeout(() => form.classList.remove('shake'), 500);
        }
      } catch (error) {
        console.error('Forgot password error:', error);
        errorMessage.textContent = 'Network error. Please try again.';
        errorMessage.style.display = 'block';
      } finally {
        submitButton.disabled = false;
        submitButton.textContent = 'Send Reset Link';
      }
    });
  });
</script>

<style>
  .forgot-password-container {
    max-width: 400px;
    margin: 2rem auto;
    padding: 2rem;
    background: var(--color-surface-elevated, #ffffff);
    border: 1px solid var(--color-border-subtle, #e4e7eb);
    border-radius: 8px;
    box-shadow: var(--shadow-md, 0 4px 6px rgba(0, 0, 0, 0.05), 0 2px 4px rgba(0, 0, 0, 0.04));
  }

  .forgot-password-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .form-group label {
    font-weight: 600;
    color: var(--color-text, #202122);
  }

  .form-group input {
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border, #a2a9b1);
    border-radius: 4px;
    font-size: 1rem;
    background: var(--color-bg, #ffffff);
    color: var(--color-text, #202122);
  }

  .form-group input:focus {
    outline: 2px solid var(--color-primary, #0645ad);
    outline-offset: 2px;
  }

  .form-group .hint {
    color: var(--color-text-muted, #72777d);
    font-size: 0.8rem;
  }

  .error-message {
    padding: 0.75rem 1rem;
    background: #fee;
    border: 1px solid #dc2626;
    border-radius: 6px;
    color: #dc2626;
    font-size: 0.9rem;
    box-shadow: var(--shadow-xs, 0 1px 2px rgba(0, 0, 0, 0.04));
  }

  .success-message {
    padding: 0.75rem 1rem;
    background: #efe;
    border: 1px solid #10b981;
    border-radius: 6px;
    color: #065f46;
    font-size: 0.9rem;
    box-shadow: var(--shadow-xs, 0 1px 2px rgba(0, 0, 0, 0.04));
  }

  .submit-button {
    padding: 0.75rem 1.5rem;
    background: var(--color-primary, #0645ad);
    color: #ffffff;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease-out;
    box-shadow: var(--shadow-sm, 0 1px 3px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.04));
    min-height: 44px; /* Touch target */
  }

  .submit-button:hover:not(:disabled) {
    background: #053a92;
    transform: translateY(-1px);
    box-shadow: var(--shadow-md, 0 4px 6px rgba(0, 0, 0, 0.05), 0 2px 4px rgba(0, 0, 0, 0.04));
  }

  .submit-button:active:not(:disabled) {
    transform: translateY(0);
  }

  .submit-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .submit-button:focus-visible {
    outline: 2px solid var(--color-link, #0645ad);
    outline-offset: 2px;
  }

  .back-link {
    margin-top: 1.5rem;
    text-align: center;
    color: var(--color-text-muted, #72777d);
  }

  .back-link a {
    color: var(--color-primary, #0645ad);
    text-decoration: none;
  }

  .back-link a:hover {
    text-decoration: underline;
  }

  .shake {
    animation: shake 0.5s ease-in-out;
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    20%, 60% { transform: translateX(-5px); }
    40%, 80% { transform: translateX(5px); }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .submit-button:hover:not(:disabled) {
      transform: none;
    }
    .form-group input,
    .submit-button {
      transition: none;
    }
  }
</style>
