---
/**
 * @fileoverview Registration form component with bot protection.
 *
 * Registration form that creates new users via API.
 * Sends confirmation email after successful registration.
 *
 * ## Security Features
 * - CSRF protection token
 * - Turnstile CAPTCHA for bot protection
 * - Honeypot field for spam filtering
 * - Form timestamp for time-based bot detection
 * - Client-side password strength validation
 *
 * @module components/auth/RegisterForm
 * @see {@link module:pages/api/auth/register} - Registration API endpoint
 * @see {@link module:lib/auth/turnstile} - Turnstile verification
 * @see {@link module:lib/email/send-confirmation} - Confirmation email
 *
 * @example
 * ```astro
 * <RegisterForm csrfToken={csrfToken} turnstileSiteKey={siteKey} />
 * ```
 *
 * @author How To Win Capitalism Team
 * @since 1.0.0
 */

interface Props {
  csrfToken?: string;
  turnstileSiteKey?: string;
}

const { csrfToken, turnstileSiteKey } = Astro.props;
---

<div class="register-form-container">
  <form id="register-form" class="register-form" novalidate>
    {csrfToken && <input type="hidden" name="csrf_token" value={csrfToken} />}

    {/* Honeypot field - hidden from humans, bots will fill it */}
    <div class="hp-field" aria-hidden="true">
      <label for="website">Website</label>
      <input type="text" id="website" name="website" tabindex="-1" autocomplete="off" />
    </div>

    {/* Form load timestamp for time-based detection */}
    <input type="hidden" id="form-timestamp" name="form_timestamp" />

    <div class="form-group">
      <label for="username">Username</label>
      <input
        type="text"
        id="username"
        name="username"
        required
        placeholder="folktechnica"
        autocomplete="username"
        pattern="[a-zA-Z0-9_]{3,20}"
        title="3-20 characters, letters, numbers, and underscores only"
      />
      <small class="hint">3-20 characters, no spaces</small>
    </div>

    <div class="form-group">
      <label for="name">Full Name</label>
      <input
        type="text"
        id="name"
        name="name"
        required
        placeholder="Folk Technica"
        autocomplete="name"
      />
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="you@example.com"
        autocomplete="email"
      />
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <div class="password-input-wrapper">
        <input
          type="password"
          id="password"
          name="password"
          required
          placeholder="Create a password"
          autocomplete="new-password"
          minlength="8"
        />
        <button type="button" class="toggle-password" id="toggle-password" aria-label="Show password">
          <svg class="eye-icon" id="eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
            <circle cx="12" cy="12" r="3"></circle>
          </svg>
          <svg class="eye-icon hidden" id="eye-closed" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
            <line x1="1" y1="1" x2="23" y2="23"></line>
          </svg>
        </button>
      </div>
      <small class="hint">At least 8 characters with letters and numbers</small>
    </div>

    {/* Turnstile CAPTCHA widget */}
    {turnstileSiteKey && (
      <div class="form-group">
        <div class="cf-turnstile" data-sitekey={turnstileSiteKey} data-callback="onTurnstileSuccess"></div>
        <input type="hidden" id="turnstile-token" name="turnstile_token" />
      </div>
    )}

    <div id="error-message" class="error-message" style="display: none;">
      An error occurred. Please try again.
    </div>

    <div id="success-message" class="success-message" style="display: none;">
      <strong>âœ“ Registration successful!</strong><br>
      Check your email to confirm your account.
    </div>

    <button type="submit" class="register-button" id="register-button">
      Create Account
    </button>
  </form>

  <p class="login-link">
    Already have an account? <a href="/login/">Log in</a>
  </p>
</div>

<!-- Turnstile script (only loads if widget is present) -->
<script is:inline>
  // Global callback for Turnstile
  window.onTurnstileSuccess = function(token) {
    const tokenInput = document.getElementById('turnstile-token');
    if (tokenInput) {
      tokenInput.value = token;
    }
  };
</script>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('register-form') as HTMLFormElement | null;
    const errorMessage = document.getElementById('error-message') as HTMLDivElement | null;
    const successMessage = document.getElementById('success-message') as HTMLDivElement | null;
    const registerButton = document.getElementById('register-button') as HTMLButtonElement | null;
    const passwordInput = document.getElementById('password') as HTMLInputElement | null;
    const togglePassword = document.getElementById('toggle-password') as HTMLButtonElement | null;
    const eyeOpen = document.querySelector<SVGElement>('#eye-open');
    const eyeClosed = document.querySelector<SVGElement>('#eye-closed');
    const turnstileTokenInput = document.getElementById('turnstile-token') as HTMLInputElement | null;
    const formTimestampInput = document.getElementById('form-timestamp') as HTMLInputElement | null;

    if (!form || !errorMessage || !successMessage || !registerButton || !passwordInput) return;

    // Set form load timestamp for time-based bot detection
    if (formTimestampInput) {
      formTimestampInput.value = String(Date.now());
    }

    // Password visibility toggle
    if (togglePassword) {
      togglePassword.addEventListener('click', () => {
        const isPassword = passwordInput.type === 'password';
        passwordInput.type = isPassword ? 'text' : 'password';
        eyeOpen?.classList.toggle('hidden', !isPassword);
        eyeClosed?.classList.toggle('hidden', isPassword);
        togglePassword.setAttribute('aria-label', isPassword ? 'Hide password' : 'Show password');
      });
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const username = formData.get('username') as string;
      const name = formData.get('name') as string;
      const email = formData.get('email') as string;
      const password = formData.get('password') as string;
      const csrfToken = formData.get('csrf_token') as string | null;
      const turnstileToken = turnstileTokenInput?.value || null;
      const honeypot = formData.get('website') as string | null; // Honeypot field
      const formTimestamp = formData.get('form_timestamp') as string | null; // Time-based detection

      // Client-side validation
      if (!username || !name || !email || !password) {
        errorMessage.textContent = 'All fields are required.';
        errorMessage.style.display = 'block';
        return;
      }

      // Username validation: 3-20 characters, letters, numbers, underscores only
      const usernamePattern = /^[a-zA-Z0-9_]{3,20}$/;
      if (!usernamePattern.test(username)) {
        errorMessage.textContent = 'Username must be 3-20 characters with no spaces (letters, numbers, underscores only).';
        errorMessage.style.display = 'block';
        return;
      }

      // Email validation
      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      if (!emailPattern.test(email)) {
        errorMessage.textContent = 'Please enter a valid email address.';
        errorMessage.style.display = 'block';
        return;
      }

      // Password validation: at least 8 characters with letters and numbers
      if (password.length < 8) {
        errorMessage.textContent = 'Password must be at least 8 characters.';
        errorMessage.style.display = 'block';
        return;
      }
      if (!/[a-zA-Z]/.test(password) || !/[0-9]/.test(password)) {
        errorMessage.textContent = 'Password must contain both letters and numbers.';
        errorMessage.style.display = 'block';
        return;
      }

      // Check Turnstile token if widget is present
      if (turnstileTokenInput && !turnstileToken) {
        errorMessage.textContent = 'Please complete the CAPTCHA verification.';
        errorMessage.style.display = 'block';
        return;
      }

      // Show loading state
      registerButton.disabled = true;
      registerButton.textContent = 'Creating account...';
      errorMessage.style.display = 'none';
      successMessage.style.display = 'none';

      try {
        const response = await fetch('/api/auth/register/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            username,
            name,
            email,
            password,
            csrf_token: csrfToken,
            turnstile_token: turnstileToken,
            hp_field: honeypot, // Honeypot field
            form_timestamp: formTimestamp, // Time-based detection
          }),
        });

        const data = await response.json();

        if (response.ok && data.success) {
          // Success - show success message
          successMessage.style.display = 'block';
          form.reset();
          registerButton.style.display = 'none';
          // Reset Turnstile if present
          if (typeof (window as any).turnstile !== 'undefined') {
            (window as any).turnstile.reset();
          }
        } else {
          // Failed - show error
          errorMessage.textContent = data.error || 'Registration failed. Please try again.';
          errorMessage.style.display = 'block';
          form.classList.add('shake');
          setTimeout(() => form.classList.remove('shake'), 500);
          // Reset Turnstile on error
          if (typeof (window as any).turnstile !== 'undefined') {
            (window as any).turnstile.reset();
          }
        }
      } catch (error) {
        console.error('Registration error:', error);
        errorMessage.textContent = 'Network error. Please try again.';
        errorMessage.style.display = 'block';
      } finally {
        registerButton.disabled = false;
        registerButton.textContent = 'Create Account';
      }
    });
  });
</script>

<style>
  /* Honeypot field - visually hidden but accessible to bots */
  .hp-field {
    position: absolute;
    left: -9999px;
    width: 1px;
    height: 1px;
    overflow: hidden;
  }

  .register-form-container {
    max-width: 400px;
    margin: 2rem auto;
    padding: 2rem;
    background: var(--color-bg, #ffffff);
    border: 1px solid var(--color-border, #a2a9b1);
    border-radius: 8px;
    position: relative; /* For honeypot positioning */
  }

  .register-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.375rem;
  }

  .form-group label {
    font-weight: 600;
    color: var(--color-text, #202122);
  }

  .form-group input {
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border, #a2a9b1);
    border-radius: 4px;
    font-size: 1rem;
    background: var(--color-bg, #ffffff);
    color: var(--color-text, #202122);
  }

  .form-group input:focus {
    outline: 2px solid var(--color-primary, #0645ad);
    outline-offset: 2px;
  }

  .form-group .hint {
    color: var(--color-text-muted, #72777d);
    font-size: 0.8rem;
  }

  .password-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .password-input-wrapper input {
    flex: 1;
    padding-right: 3rem;
  }

  .toggle-password {
    position: absolute;
    right: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-text-muted, #72777d);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .toggle-password:hover {
    color: var(--color-text, #202122);
  }

  .eye-icon {
    width: 20px;
    height: 20px;
  }

  .eye-icon.hidden {
    display: none;
  }

  .error-message {
    padding: 0.75rem 1rem;
    background: #fee;
    border: 1px solid #c00;
    border-radius: 4px;
    color: #c00;
    font-size: 0.9rem;
  }

  .success-message {
    padding: 0.75rem 1rem;
    background: #efe;
    border: 1px solid #0a0;
    border-radius: 4px;
    color: #070;
    font-size: 0.9rem;
  }

  .register-button {
    padding: 0.75rem 1.5rem;
    background: var(--color-primary, #0645ad);
    color: #ffffff;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: opacity 0.2s;
  }

  .register-button:hover {
    opacity: 0.9;
  }

  .register-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
  }

  .login-link {
    margin-top: 1.5rem;
    text-align: center;
    color: var(--color-text-muted, #72777d);
  }

  .login-link a {
    color: var(--color-primary, #0645ad);
    text-decoration: none;
  }

  .login-link a:hover {
    text-decoration: underline;
  }

  .shake {
    animation: shake 0.5s ease-in-out;
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    20%, 60% { transform: translateX(-5px); }
    40%, 80% { transform: translateX(5px); }
  }
</style>
