---
/**
 * LoginForm Component
 *
 * Login form that validates against Cloudflare KV via API.
 * Uses httpOnly cookies for session management.
 */

interface Props {
  csrfToken?: string;
}

const { csrfToken } = Astro.props;
---

<div class="login-form-container">
  <form id="login-form" class="login-form">
    {csrfToken && <input type="hidden" name="csrf_token" value={csrfToken} />}
    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="you@example.com"
        autocomplete="email"
      />
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <div class="password-input-wrapper">
        <input
          type="password"
          id="password"
          name="password"
          required
          placeholder="Enter password"
          autocomplete="current-password"
        />
        <button type="button" class="toggle-password" id="toggle-password" aria-label="Show password">
          <svg class="eye-icon" id="eye-open" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
            <circle cx="12" cy="12" r="3"></circle>
          </svg>
          <svg class="eye-icon hidden" id="eye-closed" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
            <line x1="1" y1="1" x2="23" y2="23"></line>
          </svg>
        </button>
      </div>
      <a href="/forgot-password/" class="forgot-password-link">Forgot password?</a>
    </div>

    <div id="error-message" class="error-message" style="display: none;">
      Invalid email or password. Please try again.
    </div>

    <button type="submit" class="login-button" id="login-button">
      Log In
    </button>
  </form>

  <p class="login-hint">
    <small>⚠️ Demo site under construction. Real capitalism requires much stronger passwords.</small>
  </p>

  <p class="register-link">
    Don't have an account? <a href="/register/">Create one</a>
  </p>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('login-form') as HTMLFormElement | null;
    const errorMessage = document.getElementById('error-message') as HTMLDivElement | null;
    const loginButton = document.getElementById('login-button') as HTMLButtonElement | null;
    const passwordInput = document.getElementById('password') as HTMLInputElement | null;
    const togglePassword = document.getElementById('toggle-password') as HTMLButtonElement | null;
    const eyeOpen = document.querySelector<SVGElement>('#eye-open');
    const eyeClosed = document.querySelector<SVGElement>('#eye-closed');

    if (!form || !errorMessage || !loginButton || !passwordInput) return;

    // Password visibility toggle
    if (togglePassword) {
      togglePassword.addEventListener('click', () => {
        const isPassword = passwordInput.type === 'password';
        passwordInput.type = isPassword ? 'text' : 'password';
        eyeOpen?.classList.toggle('hidden', !isPassword);
        eyeClosed?.classList.toggle('hidden', isPassword);
        togglePassword.setAttribute('aria-label', isPassword ? 'Hide password' : 'Show password');
      });
    }

    // Get redirect URL from query params
    function getRedirectUrl(): string {
      try {
        const params = new URLSearchParams(window.location.search);
        const redirect = params.get('redirect');
        if (redirect && redirect.startsWith('/') && !redirect.startsWith('//')) {
          return redirect;
        }
      } catch (e) {
        console.warn('Failed to parse redirect URL:', e);
      }
      return '/';
    }

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      const formData = new FormData(form);
      const email = formData.get('email') as string;
      const password = formData.get('password') as string;
      const csrfToken = formData.get('csrf_token') as string | null;

      // Show loading state
      loginButton.disabled = true;
      loginButton.textContent = 'Logging in...';
      errorMessage.style.display = 'none';

      try {
        const response = await fetch('/api/auth/login/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ email, password, csrf_token: csrfToken }),
          credentials: 'include', // Include cookies
        });

        const data = await response.json();

        if (response.ok && data.success) {
          // Success - redirect
          window.location.href = getRedirectUrl();
        } else {
          // Failed - show error
          errorMessage.textContent = data.error || 'Invalid email or password.';
          errorMessage.style.display = 'block';
          form.classList.add('shake');
          setTimeout(() => form.classList.remove('shake'), 500);
        }
      } catch (error) {
        console.error('Login error:', error);
        errorMessage.textContent = 'Network error. Please try again.';
        errorMessage.style.display = 'block';
      } finally {
        loginButton.disabled = false;
        loginButton.textContent = 'Log In';
      }
    });
  });
</script>

<style>
  .login-form-container {
    max-width: 400px;
    margin: 2rem auto;
    padding: 2rem;
    background: var(--color-surface-elevated, #ffffff);
    border: 1px solid var(--color-border-subtle, #e4e7eb);
    border-radius: 8px;
    box-shadow: var(--shadow-md, 0 4px 6px rgba(0, 0, 0, 0.05), 0 2px 4px rgba(0, 0, 0, 0.04));
  }

  .login-form {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .form-group label {
    font-weight: 600;
    font-size: var(--text-sm, 0.875rem);
    color: var(--color-text, #202122);
    letter-spacing: 0.01em;
  }

  .form-group input {
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border-subtle, #e4e7eb);
    border-radius: 6px;
    font-size: 1rem;
    background: var(--color-bg, #ffffff);
    color: var(--color-text, #202122);
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
    box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.02);
  }

  .form-group input::placeholder {
    color: var(--color-text-muted, #72777d);
    opacity: 0.6;
  }

  .form-group input:focus {
    outline: none;
    border-color: var(--color-link, #0645ad);
    box-shadow: 0 0 0 3px rgba(6, 69, 173, 0.1), inset 0 1px 2px rgba(0, 0, 0, 0.02);
  }

  .forgot-password-link {
    font-size: 0.85rem;
    color: var(--color-primary, #0645ad);
    text-decoration: none;
    align-self: flex-end;
    margin-top: 0.25rem;
  }

  .forgot-password-link:hover {
    text-decoration: underline;
  }

  .password-input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }

  .password-input-wrapper input {
    flex: 1;
    padding-right: 3rem;
  }

  .toggle-password {
    position: absolute;
    right: 0.5rem;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0.5rem;
    color: var(--color-text-muted, #72777d);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .toggle-password:hover {
    color: var(--color-text, #202122);
  }

  .eye-icon {
    width: 20px;
    height: 20px;
  }

  .eye-icon.hidden {
    display: none;
  }

  .error-message {
    padding: 0.75rem 1rem;
    background: #fee;
    border: 1px solid #dc2626;
    border-radius: 6px;
    color: #dc2626;
    font-size: 0.9rem;
    box-shadow: var(--shadow-xs, 0 1px 2px rgba(0, 0, 0, 0.04));
  }

  .login-button {
    padding: 0.75rem 1.5rem;
    background: var(--color-primary, #0645ad);
    color: #ffffff;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.2s ease-out;
    box-shadow: var(--shadow-sm, 0 1px 3px rgba(0, 0, 0, 0.06), 0 1px 2px rgba(0, 0, 0, 0.04));
    min-height: 44px; /* Touch target */
  }

  .login-button:hover:not(:disabled) {
    background: #053a92;
    transform: translateY(-1px);
    box-shadow: var(--shadow-md, 0 4px 6px rgba(0, 0, 0, 0.05), 0 2px 4px rgba(0, 0, 0, 0.04));
  }

  .login-button:active:not(:disabled) {
    transform: translateY(0);
  }

  .login-button:disabled {
    opacity: 0.6;
    cursor: not-allowed;
    transform: none;
  }

  .login-button:focus-visible {
    outline: 2px solid var(--color-link, #0645ad);
    outline-offset: 2px;
  }

  .login-hint {
    margin-top: 1.5rem;
    text-align: center;
    color: var(--color-text-muted, #72777d);
  }

  .register-link {
    margin-top: 1rem;
    text-align: center;
    color: var(--color-text-muted, #72777d);
  }

  .register-link a {
    color: var(--color-primary, #0645ad);
    text-decoration: none;
  }

  .register-link a:hover {
    text-decoration: underline;
  }

  .shake {
    animation: shake 0.5s ease-in-out;
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    20%, 60% { transform: translateX(-5px); }
    40%, 80% { transform: translateX(5px); }
  }

  /* Respect reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .login-button:hover:not(:disabled) {
      transform: none;
    }
    .form-group input,
    .login-button {
      transition: none;
    }
  }
</style>
