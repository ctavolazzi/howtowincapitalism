---
/**
 * BLANKSLATE - MOLECULE
 *
 * Design Patterns:
 * - Blank Slate (UI-Patterns.com): Guide users when content is empty
 * - Onboarding: Help new users get started
 *
 * Displays a helpful message when a section is empty or to onboard new users.
 * Encourages first action with clear CTA.
 *
 * Usage:
 *   <BlankSlate
 *     title="No reports yet"
 *     description="Check back later for in-depth analysis."
 *     icon="ðŸ“‹"
 *   />
 *
 *   <BlankSlate
 *     title="Welcome to The Protocol"
 *     description="Start your journey to financial autonomy."
 *     ctaText="Begin Reading"
 *     ctaHref="/protocol/introduction/"
 *     icon="ðŸš€"
 *   />
 */

export interface Props {
  /** Main heading */
  title: string;
  /** Supporting description */
  description?: string;
  /** Optional icon (emoji or text) */
  icon?: string;
  /** Call-to-action button text */
  ctaText?: string;
  /** Call-to-action link */
  ctaHref?: string;
  /** Visual variant */
  variant?: 'default' | 'compact' | 'hero';
  /** Optional CSS class */
  class?: string;
}

const {
  title,
  description,
  icon,
  ctaText,
  ctaHref,
  variant = 'default',
  class: className
} = Astro.props;

const slateClasses = [
  'blank-slate',
  `blank-slate--${variant}`,
  className
].filter(Boolean).join(' ');
---

<div class={slateClasses}>
  {icon && <span class="blank-slate__icon">{icon}</span>}
  <h3 class="blank-slate__title">{title}</h3>
  {description && <p class="blank-slate__description">{description}</p>}
  {ctaText && ctaHref && (
    <a href={ctaHref} class="blank-slate__cta">
      {ctaText}
      <span class="blank-slate__arrow">â†’</span>
    </a>
  )}
  <slot />
</div>

<style>
  /* BlankSlate - Wikipedia-inspired empty state */
  .blank-slate {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--space-2xl) var(--space-lg);
    background: var(--color-surface);
    border: var(--border-width) dashed var(--color-border);
    margin: var(--space-lg) 0;
  }

  .blank-slate__icon {
    font-size: 3rem;
    line-height: 1;
    margin-bottom: var(--space-md);
    opacity: 0.8;
  }

  .blank-slate__title {
    font-family: var(--font-serif);
    font-size: var(--text-xl);
    font-weight: 400;
    margin: 0 0 var(--space-sm) 0;
    color: var(--color-text);
  }

  .blank-slate__description {
    font-size: var(--text-base);
    color: var(--color-text);
    margin: 0 0 var(--space-lg) 0;
    max-width: 400px;
    line-height: var(--line-height);
    opacity: 0.85;
  }

  .blank-slate__cta {
    display: inline-flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--color-link);
    color: var(--color-bg);
    text-decoration: none;
    font-weight: 600;
    transition: background 0.15s ease;
  }

  .blank-slate__cta:hover {
    background: var(--color-link-visited);
    text-decoration: none;
  }

  .blank-slate__arrow {
    transition: transform 0.15s ease;
  }

  .blank-slate__cta:hover .blank-slate__arrow {
    transform: translateX(4px);
  }

  /* === VARIANTS === */

  /* Compact: smaller, inline use */
  .blank-slate--compact {
    padding: var(--space-lg);
    border-style: solid;
  }

  .blank-slate--compact .blank-slate__icon {
    font-size: 2rem;
  }

  .blank-slate--compact .blank-slate__title {
    font-size: var(--text-lg);
  }

  .blank-slate--compact .blank-slate__description {
    font-size: var(--text-sm);
    margin-bottom: var(--space-md);
  }

  .blank-slate--compact .blank-slate__cta {
    padding: var(--space-sm) var(--space-md);
    font-size: var(--text-sm);
  }

  /* Hero: large, prominent */
  .blank-slate--hero {
    padding: var(--space-2xl) var(--space-xl);
    background: var(--color-bg);
    border: 2px solid var(--color-text);
    border-style: solid;
  }

  .blank-slate--hero .blank-slate__icon {
    font-size: 4rem;
  }

  .blank-slate--hero .blank-slate__title {
    font-size: var(--text-2xl);
  }

  .blank-slate--hero .blank-slate__description {
    font-size: var(--text-lg);
    max-width: 500px;
  }

  .blank-slate--hero .blank-slate__cta {
    padding: var(--space-lg) var(--space-xl);
    font-size: var(--text-lg);
  }
</style>
