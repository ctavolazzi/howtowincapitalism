---
/**
 * @fileoverview InfoBox molecule for sidebar information display.
 *
 * A sidebar information box like Wikipedia infoboxes for
 * displaying supplementary content alongside main articles.
 *
 * Design Patterns:
 * - Composite: Composed of WikiBox atom with sidebar variant
 * - Template Method: Defines structure, content via slot
 *
 * @module components/molecules/InfoBox
 * @see {@link module:components/atoms/WikiBox} - Container component
 *
 * @example
 * ```astro
 * <InfoBox title="Quick Facts">
 *   <p>Key information here</p>
 * </InfoBox>
 * ```
 *
 * @author How To Win Capitalism Team
 * @since 1.0.0
 */
import WikiBox from '../atoms/WikiBox.astro';

export interface Props {
  /** Box title (required) */
  title: string;
  /** Optional CSS class */
  class?: string;
}

const { title, class: className } = Astro.props;
---

<WikiBox variant="sidebar" title={title} class={className}>
  <slot />
</WikiBox>

