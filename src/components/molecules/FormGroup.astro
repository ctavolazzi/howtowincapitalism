---
/**
 * FormGroup - MOLECULE
 *
 * Consistent form field wrapper with label, input, hint, and error message.
 */
export interface Props {
  /** Field label */
  label: string;
  /** Field ID (for label association) */
  id: string;
  /** Hint text */
  hint?: string;
  /** Error message */
  error?: string;
  /** Required field */
  required?: boolean;
  /** Optional CSS class */
  class?: string;
}

const {
  label,
  id,
  hint,
  error,
  required = false,
  class: className = '',
} = Astro.props;
---

<div class={`form-group ${className}`}>
  <label for={id} class="form-label">
    {label}
    {required && <span class="required-indicator" aria-label="required">*</span>}
  </label>
  <slot />
  {hint && !error && (
    <small class="form-hint" id={`${id}-hint`}>{hint}</small>
  )}
  {error && (
    <div class="form-error" id={`${id}-error`} role="alert" aria-live="polite">
      {error}
    </div>
  )}
</div>

<style>
  .form-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .form-group:last-child {
    margin-bottom: 0;
  }

  .form-label {
    font-weight: 600;
    font-size: var(--text-sm, 0.875rem);
    color: var(--color-text, #202122);
    display: flex;
    align-items: center;
    gap: 0.25rem;
  }

  .required-indicator {
    color: #dc2626;
    font-weight: 700;
  }

  .form-hint {
    color: var(--color-text-muted, #72777d);
    font-size: var(--text-xs, 0.75rem);
    line-height: 1.4;
  }

  .form-error {
    padding: 0.5rem 0.75rem;
    background: #fee;
    border: 1px solid #dc2626;
    border-radius: 4px;
    color: #dc2626;
    font-size: var(--text-sm, 0.875rem);
    line-height: 1.4;
  }

  /* Ensure inputs within form-group have consistent styling */
  .form-group input,
  .form-group textarea,
  .form-group select {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border, #a2a9b1);
    border-radius: 6px;
    font-size: var(--text-base, 1rem);
    font-family: inherit;
    background: var(--color-bg, #ffffff);
    color: var(--color-text, #202122);
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .form-group input:focus,
  .form-group textarea:focus,
  .form-group select:focus {
    outline: none;
    border-color: var(--color-link, #0645ad);
    box-shadow: 0 0 0 3px rgba(6, 69, 173, 0.1);
  }

  .form-group input:invalid:not(:focus):not(:placeholder-shown),
  .form-group textarea:invalid:not(:focus):not(:placeholder-shown) {
    border-color: #dc2626;
  }

  .form-group input[aria-invalid="true"],
  .form-group textarea[aria-invalid="true"] {
    border-color: #dc2626;
  }
</style>
