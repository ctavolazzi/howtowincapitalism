---
/**
 * CARDGRID - UTILITY
 *
 * A responsive grid container for TopicCard components.
 * Handles layout so cards don't need to know about grid.
 *
 * Usage:
 *   <CardGrid>
 *     <TopicCard ... />
 *     <TopicCard ... />
 *   </CardGrid>
 *
 *   <CardGrid columns={3}>
 *     ...
 *   </CardGrid>
 */

export interface Props {
  /** Number of columns (default: 2, auto-adjusts on mobile) */
  columns?: 2 | 3 | 4;
  /** Gap size */
  gap?: 'sm' | 'md' | 'lg';
  /** Optional CSS class */
  class?: string;
}

const {
  columns = 2,
  gap = 'md',
  class: className
} = Astro.props;

const gridClasses = [
  'card-grid',
  `card-grid--cols-${columns}`,
  `card-grid--gap-${gap}`,
  className
].filter(Boolean).join(' ');
---

<div class={gridClasses}>
  <slot />
</div>

