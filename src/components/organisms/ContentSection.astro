---
/**
 * @fileoverview Content section organism with optional WikiBox wrapper.
 *
 * A flexible content section that can render content directly or
 * wrap it in a WikiBox component for consistent styling.
 *
 * Design Patterns:
 * - Composite: Composed of WikiBox + content
 * - Template Method: Section structure with slots
 *
 * @module components/organisms/ContentSection
 * @see {@link module:components/atoms/WikiBox} - Optional wrapper component
 *
 * @example
 * ```astro
 * <ContentSection title="Section Title">
 *   <p>Content here</p>
 * </ContentSection>
 *
 * <ContentSection title="Boxed Section" boxed variant="info">
 *   <p>Content in WikiBox</p>
 * </ContentSection>
 * ```
 *
 * @author How To Win Capitalism Team
 * @since 1.0.0
 */
import WikiBox from '../atoms/WikiBox.astro';

export interface Props {
  /** Section title */
  title?: string;
  /** Show in a box */
  boxed?: boolean;
  /** Box variant if boxed */
  variant?: 'default' | 'info' | 'nav';
}

const {
  title,
  boxed = false,
  variant = 'default'
} = Astro.props;
---

{boxed ? (
  <WikiBox variant={variant} title={title}>
    <slot />
  </WikiBox>
) : (
  <section class="content-section">
    {title && <h2>{title}</h2>}
    <slot />
  </section>
)}

<style>
  .content-section {
    margin: var(--space-xl, 24px) 0;
  }

  .content-section h2 {
    border-bottom: 1px solid var(--color-border, #a2a9b1);
    padding-bottom: var(--space-xs, 4px);
  }
</style>

