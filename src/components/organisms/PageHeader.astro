---
/**
 * @fileoverview Page header organism with optional disclaimer banner.
 *
 * A complete page header section providing consistent page structure
 * with optional disclaimer banner and customizable slots.
 *
 * Design Patterns:
 * - Composite: Composed of multiple molecules (Disclaimer)
 * - Template Method: Defined structure with slots
 * - Facade: Simple interface to complex header layout
 *
 * @module components/organisms/PageHeader
 * @see {@link module:components/molecules/Disclaimer} - Optional disclaimer component
 *
 * @example
 * ```astro
 * <PageHeader />
 * <PageHeader showDisclaimer={false}>
 *   <h1>Page Title</h1>
 * </PageHeader>
 * ```
 *
 * @author How To Win Capitalism Team
 * @since 1.0.0
 */
import Disclaimer from '../molecules/Disclaimer.astro';

export interface Props {
  /** Show disclaimer banner */
  showDisclaimer?: boolean;
  /** Custom disclaimer text */
  disclaimerText?: string;
}

const {
  showDisclaimer = true,
  disclaimerText
} = Astro.props;
---

<header class="page-header">
  {showDisclaimer && <Disclaimer text={disclaimerText} />}
  <slot name="after-disclaimer" />
  <slot />
</header>

<style>
  .page-header {
    margin-bottom: var(--space-lg, 16px);
  }
</style>

