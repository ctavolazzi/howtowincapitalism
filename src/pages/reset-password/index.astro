---
/**
 * Reset Password Page
 *
 * Page to set a new password using a reset token.
 * Token is passed via URL query parameter.
 * Uses Base.astro layout for consistency.
 */
import Base from '../../layouts/Base.astro';
import ResetPasswordForm from '../../components/auth/ResetPasswordForm.astro';
---

<Base title="Reset Password" description="Create a new password for your account" hideNav={false}>
  <div class="auth-page">
    <div class="auth-header">
      <h1>Reset Password</h1>
      <p>Create a new password for your account</p>
    </div>

    <ResetPasswordForm />
  </div>
</Base>

<style>
  .auth-page {
    max-width: 500px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .auth-header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .auth-header h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
    margin-top: 0;
  }

  .auth-header p {
    color: var(--color-text-muted, #72777d);
    margin: 0;
  }

  @media (min-width: 640px) {
    .auth-page {
      padding: 3rem 2rem;
    }
  }
</style>
