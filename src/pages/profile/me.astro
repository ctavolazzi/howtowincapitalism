---
/**
 * Profile "Me" Redirect
 *
 * Utility route that redirects to the current user's profile.
 *
 * States:
 * - Loading: Checking auth...
 * - Success (logged in): Redirect to /profile/{userId}/
 * - Auth Failed: Redirect to /login/?redirect=/profile/me/
 * - System Error: Show error with retry option
 *
 * This allows linking to "your profile" without knowing the user ID.
 * Example: <a href="/profile/me/">View My Profile</a>
 */
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Redirecting... | How To Win Capitalism</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <style>
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      background: #f8f9fa;
      color: #202122;
    }

    .container {
      text-align: center;
      padding: 2rem;
      max-width: 400px;
    }

    /* Loading State */
    .spinner {
      width: 48px;
      height: 48px;
      border: 3px solid #eaecef;
      border-top-color: #0645ad;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 1.5rem;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .status {
      color: #72777d;
      font-size: 1rem;
      line-height: 1.5;
    }

    .status a {
      color: #0645ad;
    }

    /* Error State */
    .error-card {
      display: none;
      background: white;
      border: 1px solid #a2a9b1;
      border-radius: 12px;
      padding: 2rem;
      text-align: center;
    }

    .error-card.visible {
      display: block;
    }

    .error-icon {
      font-size: 3rem;
      margin-bottom: 1rem;
    }

    .error-card h2 {
      font-size: 1.25rem;
      margin-bottom: 0.75rem;
      color: #202122;
    }

    .error-card p {
      color: #72777d;
      margin-bottom: 0.5rem;
      font-size: 0.9375rem;
    }

    .error-detail {
      font-size: 0.75rem;
      font-family: monospace;
      background: #f8f9fa;
      padding: 0.5rem;
      border-radius: 4px;
      margin: 1rem 0;
      word-break: break-all;
      color: #54595d;
    }

    .actions {
      display: flex;
      gap: 0.75rem;
      justify-content: center;
      margin-top: 1.5rem;
    }

    .btn {
      padding: 0.625rem 1.25rem;
      border-radius: 6px;
      font-size: 0.875rem;
      font-weight: 500;
      text-decoration: none;
      cursor: pointer;
      transition: all 0.2s;
    }

    .btn-primary {
      background: #0645ad;
      color: white;
      border: none;
    }

    .btn-primary:hover {
      background: #003d99;
    }

    .btn-secondary {
      background: transparent;
      color: #202122;
      border: 1px solid #a2a9b1;
    }

    .btn-secondary:hover {
      border-color: #0645ad;
      color: #0645ad;
    }

    /* Hide loading when error is shown */
    .loading-state.hidden {
      display: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Loading State -->
    <div id="loading-state" class="loading-state">
      <div class="spinner"></div>
      <p id="status" class="status">Checking authentication...</p>
    </div>

    <!-- Error State -->
    <div id="error-card" class="error-card">
      <div class="error-icon">⚠️</div>
      <h2 id="error-title">Something Went Wrong</h2>
      <p id="error-message">We couldn't process your request.</p>
      <div id="error-detail" class="error-detail" style="display: none;"></div>
      <div class="actions">
        <button id="btn-retry" class="btn btn-primary">Try Again</button>
        <a href="/" class="btn btn-secondary">Go Home</a>
      </div>
    </div>
  </div>

  <script>
    import { checkAuth } from '../../lib/auth/api-client';

    // DOM Elements
    const loadingState = document.getElementById('loading-state');
    const statusEl = document.getElementById('status');
    const errorCard = document.getElementById('error-card');
    const errorTitle = document.getElementById('error-title');
    const errorMessage = document.getElementById('error-message');
    const errorDetail = document.getElementById('error-detail');
    const btnRetry = document.getElementById('btn-retry');

    // State management
    function showLoading(message: string) {
      if (loadingState) loadingState.classList.remove('hidden');
      if (errorCard) errorCard.classList.remove('visible');
      if (statusEl) statusEl.textContent = message;
    }

    function showError(title: string, message: string, detail?: string) {
      if (loadingState) loadingState.classList.add('hidden');
      if (errorCard) errorCard.classList.add('visible');
      if (errorTitle) errorTitle.textContent = title;
      if (errorMessage) errorMessage.textContent = message;
      if (errorDetail) {
        if (detail) {
          errorDetail.textContent = detail;
          errorDetail.style.display = 'block';
        } else {
          errorDetail.style.display = 'none';
        }
      }
    }

    async function redirect() {
      showLoading('Checking authentication...');

      try {
        const { authenticated, user } = await checkAuth();

        // Check: Is user logged in?
        if (!authenticated || !user) {
          showLoading('Not logged in. Redirecting to login...');
          await new Promise((r) => setTimeout(r, 800));
          window.location.href = '/login/?redirect=/profile/me/';
          return;
        }

        // Success: Redirect to user's profile
        showLoading(`Welcome back, ${user.name || user.id}! Redirecting...`);
        await new Promise((r) => setTimeout(r, 500));
        window.location.href = `/profile/${user.id}/`;

      } catch (err) {
        console.error('Redirect error:', err);
        showError(
          'System Error',
          'An unexpected error occurred while loading your profile.',
          err instanceof Error ? err.message : 'Unknown error'
        );
      }
    }

    // Event handlers
    btnRetry?.addEventListener('click', () => redirect());

    // Initialize
    redirect();
  </script>
</body>
</html>
