---
/**
 * Profile Page
 *
 * Redirects to the user's editable profile page.
 * If not logged in, redirects to login.
 */
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Redirecting... | How To Win Capitalism</title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
      display: flex;
      align-items: center;
      justify-content: center;
      min-height: 100vh;
      margin: 0;
      background: #f5f5f5;
    }
    .loading {
      text-align: center;
      color: #666;
    }
  </style>
</head>
<body>
  <div class="loading">
    <p>Redirecting to your profile...</p>
  </div>

  <script>
    import { authStore, getCurrentUser } from '../../lib/auth';

    async function redirect() {
      // Wait for store to hydrate from localStorage
      await new Promise((r) => setTimeout(r, 100));

      const state = authStore.get();
      const isLoggedIn = state.isLoggedIn === 'true';

      if (isLoggedIn && state.userId) {
        // Redirect to the user's editable profile
        window.location.href = `/users/${state.userId}/`;
      } else {
        // Not logged in, go to login
        window.location.href = '/login/?redirect=/profile/';
      }
    }

    redirect();
  </script>
</body>
</html>
