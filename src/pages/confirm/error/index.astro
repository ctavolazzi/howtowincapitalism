---
/**
 * Email Confirmation Error Page
 *
 * Shown when email confirmation fails (invalid/expired token).
 * Uses Base.astro layout for consistency.
 */
import Base from '../../../layouts/Base.astro';
---

<Base title="Confirmation Failed" description="We couldn't verify your email address" hideNav={false}>
  <div class="confirm-page">
    <div class="error-container">
      <div class="error-icon">âœ•</div>
      <h1>Confirmation Failed</h1>
      <p>
        We couldn't verify your email address.
        The confirmation link may be invalid or expired.
      </p>
      <p class="reason" id="reason"></p>
      <div class="actions">
        <a href="/register/" class="btn btn-primary">Register Again</a>
        <a href="/login/" class="btn btn-secondary">Try Login</a>
      </div>
    </div>
  </div>
</Base>

<script>
  // Show reason if provided
  const params = new URLSearchParams(window.location.search);
  const reason = params.get('reason');
  const reasonEl = document.getElementById('reason');

  if (reason && reasonEl) {
    const messages: Record<string, string> = {
      'missing-token': 'No confirmation token was provided.',
      'invalid-token': 'The confirmation link is invalid or has already been used.',
      'expired-token': 'The confirmation link has expired (links expire after 24 hours).',
      'service-unavailable': 'Service temporarily unavailable. Please try again later.',
      'server-error': 'An unexpected error occurred. Please try again.',
    };
    reasonEl.textContent = messages[reason] || `Error: ${reason}`;
  }
</script>

<style>
  .confirm-page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    text-align: center;
  }

  .error-container {
    max-width: 500px;
    padding: 3rem;
    background: #fee;
    border: 1px solid #c00;
    border-radius: 8px;
  }

  .error-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: #c00;
  }

  .error-container h1 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #c00;
    margin-top: 0;
  }

  .error-container p {
    margin-bottom: 1rem;
    color: var(--color-text, #202122);
    line-height: 1.6;
  }

  .reason {
    font-size: 0.9rem;
    color: var(--color-text-muted, #72777d);
    margin-bottom: 1.5rem;
  }

  .actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-top: 1.5rem;
  }
</style>
