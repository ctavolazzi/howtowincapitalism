---
/**
 * Email Confirmation Success Page
 *
 * Shown after user clicks the confirmation link in their email.
 * Uses Base.astro layout for consistency.
 */
import Base from '../../../layouts/Base.astro';
---

<Base title="Email Confirmed" description="Your email address has been verified successfully" hideNav={false}>
  <div class="confirm-page">
    <div class="success-container">
      <div class="success-icon">âœ“</div>
      <h1>Email Confirmed!</h1>
      <p>
        Your email address has been verified successfully.
        You can now log in to your account.
      </p>
      <a href="/login/" class="btn btn-primary">Log In Now</a>
    </div>
  </div>
</Base>

<style>
  .confirm-page {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 60vh;
    text-align: center;
  }

  .success-container {
    max-width: 500px;
    padding: 3rem;
    background: #e6f4e6;
    border: 1px solid #0a7a0a;
    border-radius: 8px;
  }

  .success-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: #0a7a0a;
  }

  .success-container h1 {
    font-size: 1.75rem;
    margin-bottom: 1rem;
    color: #0a7a0a;
    margin-top: 0;
  }

  .success-container p {
    margin-bottom: 1.5rem;
    color: var(--color-text, #202122);
    line-height: 1.6;
  }
</style>
